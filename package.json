{
  "name": "go-stdlib-scaffold",
  "version": "1.0.0",
  "description": "A production-ready blueprint for building modern web applications with Go's standard library.",
  "main": "index.js",
  "scripts": {
    "build:css": "postcss ./assets/css/app.css -o ./public/assets/app.css",
    "build:js": "esbuild ./assets/js/app.js --bundle --outfile=./public/assets/app.js --minify",
    "build": "npm run build:css && npm run build:js",
    "watch:css": "postcss ./assets/css/app.css -o ./public/assets/app.css --watch",
    "watch:js": "esbuild ./assets/js/app.js --bundle --outfile=./public/assets/app.js --watch",
    "watch": "concurrently \"npm:watch:css\" \"npm:watch:js\"",
    "lint": "prettier --check .",
    "format": "prettier --write ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dunamismax/go-stdlib-scaffold.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/dunamismax/go-stdlib-scaffold/issues"
  },
  "homepage": "https://github.com/dunamismax/go-stdlib-scaffold#readme",
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.11",
    "alpinejs": "^3.14.9",
    "concurrently": "^9.2.0",
    "esbuild": "^0.25.6",
    "htmx.org": "^2.0.1",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "prettier": "^3.3.2",
    "tailwindcss": "^4.1.11"
  }
}
